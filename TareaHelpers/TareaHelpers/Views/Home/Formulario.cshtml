@model TareaHelpers.Models.TDatos

@{

                ViewBag.Title = "Formulario";
}

<h2>Formulario</h2>

@using (Html.BeginForm("Formulario", "Home"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div align="center">
        <label>Cedula</label>
        <div class="editor-field form-group">
            @Html.TextBoxFor(model => model.Cedula)<br />
            @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
        </div>

        <label>Nombre</label>
        <div class="editor-field form-group ">
            @Html.EditorFor(model => model.Nombre)<br />
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>

        <label>Apellido</label>
        <div class="editor-field form-group   ">
            @Html.EditorFor(model => model.Apellido)<br />
            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
        </div>

        <label>Edad</label>
        <div class="editor-label form-group">
            @Html.EditorFor(model => model.Edad)<br />
            @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
        </div>

        <label>Telefono</label>
        <div class="editor-label form-group">
            @Html.EditorFor(model => model.Telefono)<br />
            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
        </div>

        <label>Correo</label>
        <div class="editor-label form-group ">
            @Html.EditorFor(model => model.Correo)<br />
            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
        </div>

        <label>Genero</label>
        <div class="editor-label form-group">
            @Html.DropDownList("Genero",
        new SelectList(Enum.GetValues(typeof(Genero))),
        "Seleccionar Genero",
        new { @class = "form-control" })
        </div>

    </div>


    <label style="margin-left:46.5%">Estado Civil</label><br />

    <div class="form-group" align="center">
        @Html.Label("estado_civil", "Casado") @Html.RadioButton("estado_civil", "Casado")<br />
        @Html.Label("estado_civil", "Soltero") @Html.RadioButton("estado_civil", "Soltero")<br />
        @Html.Label("estado_civil", "Viudo")   @Html.RadioButton("estado_civil", "Viudo")<br />
        @Html.Label("estado_civil", "Union Libre")  @Html.RadioButton("estado_civil", "Union Libre") <br />
    </div>
    <center>
        <div class="form-group" style="width:190px;">

            <label>Hobbys</label>

            <ol>
                @for (int i = 0; i < Model.Hobbys.Count(); i++)
                {
                    <li>
                        <label>
                            @Html.HiddenFor(m => Model.Hobbys[i].HobbysId)
                            @Html.HiddenFor(m => Model.Hobbys[i].NombreHobbysId)
                            @Html.CheckBoxFor(m => Model.Hobbys[i].Valor)  @Model.Hobbys[i].NombreHobbysId
                        </label>
                    </li>
                }
            </ol>

        </div>
    </center>

    <div align="center">
        <input class="btn btn-primary" type="submit" value="Enviar Formulario" />
    </div>



}
